
@{ Layout = "_BasicLayout";}

<div class="jumbotron">
    <p>By entering in a URL in the text field below, we will create a short URL for you!</p>
    <br />
    <form asp-action="Create" name="url">
        <div class="form-horizontal">
            <div class="input-group input-group-lg">
                <input name="longUrl" class="form-control" placeholder="Paste the URL to be shorten..." />
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="submit">Shorten URL</button>
                </span>
            </div>
        </div>
    </form>
</div>